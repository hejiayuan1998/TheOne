<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_category"
            style="@style/txt_10_aaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="- 音乐 -"
            android:textColor="@color/tv_main_nav" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/txt_20_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingMultiplier="1.2"
            android:text="把你的的影子加点盐，腌起来，风干，老的时候下酒" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/txt_16_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:text="文 / 夏宇" />

        <RelativeLayout
            android:id="@+id/rl_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_centerVertical="true"
                android:src="@drawable/feeds_music" />


            <com.smashing.theone.common.widget.CDLayout
                android:id="@+id/cd_layout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true" />


            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_alignBottom="@+id/iv_music_decotate"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@+id/cd_layout"
                android:src="@drawable/xiami_right" />


            <ImageView
                android:id="@+id/iv_music_decotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/feeds_music_story" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_desc"
                style="@style/txt_12_aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:text="(失明前)我想记得的四十七件事 · 陈绮贞 | 几米地下铁音乐剧原声带" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_forward"
            style="@style/txt_14_787878"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingMultiplier="1.5"
            android:text="你仰起脸彷佛我就在你的鼻尖发光。" />

        <include layout="@layout/bottom_common" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_14"
        android:background="@color/custom_bg" />


</LinearLayout>