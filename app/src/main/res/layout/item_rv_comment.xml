<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_header"
                android:layout_width="@dimen/dp_20"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tv_user_name" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/txt_12_787878"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/civ_header"
                android:text="好了" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/txt_10_aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017/05/02" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_touser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/border_gray_2dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_touser_name"
                style="@style/txt_12_787878"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chensen :" />

            <TextView
                android:id="@+id/tv_quote"
                style="@style/txt_12_787878"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingMultiplier="1.5"
                android:text="浩瀚人海中的相遇，漫长岁月里的平凡，一个她，一首歌，一辈子。" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment"
            style="@style/txt_14_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.5"
            android:text="额昂后你没听这首歌都会想起他额昂后你没听这首歌都会想起他额昂后你没听这首歌都会想起他额昂后你没听这首歌都会想起他额昂后你没听额昂后你没听这首歌额昂后你没听这首歌都会想起他额昂后你没听这首歌都会想起他都会想起他这首歌都会想起他" />

        <TextView
            android:id="@+id/tv_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="展开"
            android:textColor="@android:color/holo_blue_light"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/bottom_comment" />

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/comment_laud" />


            <TextView
                android:id="@+id/tv_praise_num"
                style="@style/txt_10_787878"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/custom_bg" />

</LinearLayout>