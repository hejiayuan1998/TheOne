<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical">

    <TextView
        style="@style/txt_14_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者" />

    <View
        android:layout_width="80dp"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#333" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_author_header"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_concern"
            android:layout_toRightOf="@+id/iv_author_header"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tV_author_name"
                style="@style/txt_12_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李淑" />

            <TextView
                android:id="@+id/tV_author_desc"
                style="@style/txt_10_aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="写字爱好者" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_concern"
            style="@style/txt_10_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border_black_2dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:paddingTop="3dp"
            android:text="关注" />

    </RelativeLayout>


</LinearLayout>